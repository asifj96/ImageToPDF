<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PdfReaderConverter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

    </style>

    <style name="TextViewStyle" parent="Theme.PdfReaderConverter">
        <item name="fontFamily">@font/roboto_serif_medium</item>
        <item name="fontStyle">normal</item>
        <item name="android:textStyle">normal</item>
        <item name="fontWeight">500</item>

    </style>
    <style name="ImageStyle_Corners_Cut">
        <item name="cornerSize">2%</item>
    </style>
    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="startAppTheme" parent="Theme.PdfReaderConverter">
        <item name="android:windowBackground">@drawable/start_app_drawable</item>
    </style>
    <style name="ThemePopUpMenu" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_serif_regular</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="popupMenuBackground">@drawable/card_bg</item>
        <item name="iconSpaceReserved">true</item>
    </style>

    <style name="TextViewStyle.Regular.18sdp.Gray" parent="TextViewStyle">
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>
    <style name="TextViewStyle.Regular.16sdp" parent="TextViewStyle">
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextViewStyle.Regular.14sdp" parent="TextViewStyle">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="fontFamily">@font/roboto_serif_regular</item>
    </style>
    <style name="TextViewStyle.Regular.12sdp" parent="TextViewStyle">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/roboto_serif_regular</item>
    </style>
    <style name="TextViewStyle.Regular.9sdp" parent="TextViewStyle">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="fontFamily">@font/roboto_serif_regular</item>
    </style>
</resources>